{
	"name":"Gemini model chat",
	"creator":"Mike Anderson",
	"description":"Example operation that chats with a Gemini endpoint via LangChainAdapter (OpenAI-compatible route)",
	"dateCreated":"2025-09-16T00:00:00Z",
	"dateModified": "2025-09-16T00:00:00Z",
	"keywords":["LLM", "model", "gemini"],
	"operation": {
		"adapter": "langchain:openai",
		"featured":true,

		"input":{
			"type":"object",
			"properties":{
				"prompt":{
					"type":"string",
					"description":"The prompt for the model."
				},
				"model":{
					"type":"string",
					"description":"Optional model name (defaults to gemini-1.5-flash)",
					"default":"gemini-1.5-flash"
				},
				"systemPrompt":{
					"type":"string",
					"description":"System prompt to set the AI's behaviour and context"
				},
				"apiKey":{
					"type":"string",
					"secret":true,
					"description":"API key for authentication"
				},
				"url":{
					"type":"string",
					"description":"Gemini base URL (defaults to https://generativelanguage.googleapis.com/v1beta)",
					"default":"https://generativelanguage.googleapis.com/v1beta"
				}
			}
		},
		"output":{
			"type":"object",
			"properties":{
				"response":{
					"type":"string",
					"description":"The LLM response"
				},
				"think":{
					"type":"string",
					"description":"Model thought process"
				}
			}
		}
	}
}


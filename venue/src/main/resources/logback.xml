<!-- Defayult logback config. 

Use in tests without full Tokengine startup with overrides with tokengine/logback-default.xml -->
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{yyyy-MM-dd'T'HH:mm:ss.SSSX, UTC} %-5level [%thread] %logger{36} -%kvp- %msg%n</pattern>
    </encoder>
  </appender>

  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
  
  <logger name="io.javalin" level="WARN" />
  
  <logger name="org.eclipse" level="WARN" />
  
  <logger name="dev.langchain4j" level="WARN" />
</configuration>
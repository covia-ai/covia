{
	"name": "HTTP Query Parameters Example",
	"description": "Demonstrates how to use query parameters with the HTTP adapter for API calls",
	"dateCreated": "2025-01-27T10:00:00Z",
	"operation": {
		"adapter": "http",
		"input": {
			"type": "object",
			"properties": {
				"url": {
					"type": "string",
					"description": "The base URL for the API endpoint",
					"defaultValue": "https://api.github.com/search/repositories"
				},
				"method": {
					"type": "string",
					"description": "HTTP method to use",
					"defaultValue": "GET"
				},
				"headers": {
					"type": "object",
					"description": "HTTP headers to include in the request",
					"defaultValue": {
						"Accept": "application/vnd.github.v3+json",
						"User-Agent": "Covia-HTTP/1.0"
					}
				},
				"queryParams": {
					"type": "object",
					"description": "Query parameters to append to the URL",
					"defaultValue": {
						"q": "java language:java",
						"sort": "stars",
						"order": "desc",
						"per_page": "5"
					}
				}
			},
			"required": ["url"]
		},
		"output": {
			"type": "object",
			"properties": {
				"status": {
					"type": "number",
					"description": "HTTP status code from the response"
				},
				"body": {
					"type": "string",
					"description": "The response body from the HTTP request"
				},
				"headers": {
					"type": "object",
					"description": "Response headers from the server"
				}
			}
		}
	}
}
